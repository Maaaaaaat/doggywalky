
<!-- app/views/groups/new.html.erb -->
<div class="container">
  <h1 class="pt-3 pb-2">Créez un groupe 🐶</h1>

  <%= simple_form_for([@profile, @group]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  label: "Nom du groupe",
                  required: true,
                  autofocus: true,
                  label_html: { class: 'form-label-custom' },
                  input_html: { class: 'custom-class' } %>
    <div data-controller="autocomplete" data-action="input->autocomplete#updateSuggestions">
        <%= f.input :city,
                    label: "Ville",
                    required: false,
                    autofocus: true,
                    label_html: { class: 'form-label-custom' },
                    input_html: { autocomplete: "off", class: 'custom-class', 'data-autocomplete-target': 'input' } %>
        <div id="city-suggestions" data-autocomplete-target="suggestions" class="custom-suggestions-list"></div>
      </div>
      <%= f.input :description,
                  label: "Description",
                  as: :text,
                  required: true,
                  label_html: { class: 'form-label-custom' },
                  input_html: { class: 'custom-class' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Créer le groupe 🐶", class: "button-form" %>
    </div>
  <% end %>

  <div class="mt-3">
    <p class="mb-1">Vous voulez revenir en arrière?</p>
    <div class="edit-btn">
      <%= link_to "Retour", profile_groups_path(@profile), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
