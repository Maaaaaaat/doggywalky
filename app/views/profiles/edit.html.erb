<div class="container">
<h2 class="mt-5 text-center">Editer un profil</h2>

<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                label: "Nom d'utilisateur",
                required: false,
                autofocus: true,
                label_html: { class: 'form-label-custom' },
                input_html: { autocomplete: "username", class: 'custom-class' } %>
    <%= f.input :gender,
                label: "Genre",
                required: false,
                autofocus: true,
                collection: Profile::GENDER,
                label_html: { class: 'form-label-custom' },
                input_html: { autocomplete: "gender", class: 'custom-class' }%>
     <div data-controller="autocomplete" data-action="input->autocomplete#updateSuggestions">
        <%= f.input :city,
                    label: "Ville",
                    required: false,
                    autofocus: true,
                    label_html: { class: 'form-label-custom' },
                    input_html: { autocomplete: "off", class: 'custom-class', 'data-autocomplete-target': 'input' } %>
        <div id="city-suggestions" data-autocomplete-target="suggestions" class="custom-suggestions-list"></div>
      </div>
    <%= f.input :street,
                label: "Rue à proximité pour trouver des groupes",
                required: false,
                label_html: { class: 'form-label-custom' },
                input_html: { autocomplete: "street", class: 'custom-class' } %>
                 <%= f.input :current_password,
                hint: "Rentrez votre mot de passe pour confirmer",
                required: true,
                label: "Mot de passe",
                label_html: { class: 'form-label-custom' },
                input_html: { class: 'custom-class' } %>
          <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Valider 🐶", class: "button-form" %>
  </div>

<% end %>
<div class=" mt-3">
<p class="mb-1">
Vous voulez mettre le compte à jour?
</p>
<div class="edit-btn">
<%= link_to "Editer le compte", edit_user_registration_path(@user) %>
</div>
<%= link_to "Supprimer le profil", profile_path(@profile), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>
<div class="edit-btn d-flex justify-content-end">
<%= link_to "Homepage", root_path %>
</div>
</div>
