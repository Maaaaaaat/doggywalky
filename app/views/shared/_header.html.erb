    <div class="dropdown">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/sarahlafer", class: "avatar-bordered dropdown-toggle", alt: "avatar-bordered", id: "dropdownMenuButton", data: { bs_toggle: "dropdown" }, 'aria-expanded': "false" %>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><%= link_to 'Mon compte', edit_user_registration_path, class: 'dropdown-item' %></li>
