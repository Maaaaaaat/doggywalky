<!-- app/views/shared/_header.html.erb -->
<div class="header-container">
  <div class="header fixed-top">
    <% if user_signed_in? %>
      <div class="dropdown">
        <%= image_tag "pp facebook.jpg", class: "avatar-bordered dropdown-toggle", alt: "avatar-bordered", id: "dropdownMenuButton", data: { bs_toggle: "dropdown" }, 'aria-expanded': "false" %>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><%= link_to 'Mon compte', edit_user_registration_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Mon profil', profile_path(current_user.profile), class: 'dropdown-item' %></li>
          <li><%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: { turbo_method: :delete } %></li>
        </ul>
      </div>
    <% else %>
      <%= image_tag "avatar2.png", class: "avatar-bordered", alt: "avatar-bordered" %>
    <% end %>
  </div>
</div>
