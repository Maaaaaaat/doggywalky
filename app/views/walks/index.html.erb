<div class="container">
<h1 class="pt-3">Liste des sorties à venir</h1>
<h1 style="margin-left: 150px; margin-top: 15px;"><%= @group_name %></h1>

<div class="contain">
   <% if @walks.any? %>
      <% @walks.each do |walk|%>
  <div class="card-product">
    <img src="https://res.cloudinary.com/drp9liavk/image/upload/v1719492741/development/mpdavi6h3egnxsn7ud7mhb995oj3.jpg" />
        <div class="card-product-infos">
          <h2><%= walk.date %></h2>
          <p><%= walk.start_time %></p>
          <p><%= walk.adress %></p>

          <% if !current_user.profile.profile_walks.include?(ProfileWalk.find_by(walk_id: walk.id)) %>
        <div class="btn-div">
          <%= link_to "Rejoins la sortie 🐶", walk_join_path(walk, group_id: @group.id), data: {turbo_method: :post}, class: "button-form btn btn-link", style: "text-decoration:none;" %>
        </div>
          <% end %>
          <% if current_user.profile.profile_walks.include?(ProfileWalk.find_by(walk_id: walk.id)) %>
        <div class="btn-div">
            <%= link_to "Quitter la sortie 🐶", profile_walk_quit_path(walk, group_id: @group.id), data: {turbo_method: :delete}, class: "button-form btn btn-link", style: "text-decoration:none;" %>
        </div>
            <% end %>
        </div>
  </div>
      <% end %>
  <% end %>
</div>
</div>
