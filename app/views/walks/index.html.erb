<div class="container">
<h1 class="pt-3">Liste des sorties à venir</h1>
<h1 style="margin-left: 150px; margin-top: 15px;"><%= @group_name %></h1>

<div class="contain">
   <% if @walks.any? %>
      <% @walks.each do |walk|%>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= walk.date %></h2>
          <p><%= walk.start_time %></p>
          <p><%= walk.adress %></p>

        <div class="btn-div">
          <% if !current_user.profile.walks.include?(walk) %>
          <%= link_to "Rejoins la sortie 🐶", walk_join_path(walk), data: {turbo_method: :post}, class: "button-form btn btn-link", style: "text-decoration:none;" %>
          <% end %>
        </div>
        </div>
  </div>
      <% end %>
    <% end %>
</div>
</div>
